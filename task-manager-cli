        "import os\n",
        "from typing import List\n",
        "\n",
        "GOREV_DOSYASI = \"gorevler.txt\"\n",
        "\n",
        "def gorevleri_dosyadan_oku():\n",
        "    gorevler = []\n",
        "    try:\n",
        "        if os.path.exists(GOREV_DOSYASI):\n",
        "            with open(GOREV_DOSYASI, 'r', encoding='utf-8') as dosya:\n",
        "                gorevler = [satir.strip() for satir in dosya.readlines() if satir.strip()]\n",
        "        return gorevler\n",
        "    except:\n",
        "        return []\n",
        "\n",
        "def gorevleri_dosyaya_kaydet(gorevler):\n",
        "    try:\n",
        "        with open(GOREV_DOSYASI, 'w', encoding='utf-8') as dosya:\n",
        "            for gorev in gorevler:\n",
        "                dosya.write(gorev + '\\n')\n",
        "        return True\n",
        "    except:\n",
        "        return False\n",
        "\n",
        "def ana_menu():\n",
        "    print(\"\\n\" + \"=\"*40)\n",
        "    print(\"GÃ–REV YÃ–NETÄ°MÄ° SÄ°STEMÄ°\")\n",
        "    print(\"=\"*40)\n",
        "    print(\"1. GÃ¶revleri Listele\")\n",
        "    print(\"2. Yeni GÃ¶rev Ekle\")\n",
        "    print(\"3. GÃ¶rev DÃ¼zenle\")\n",
        "    print(\"4. GÃ¶rev Sil\")\n",
        "    print(\"5. Ã‡Ä±kÄ±ÅŸ\")\n",
        "    print(\"=\"*40)\n",
        "\n",
        "def secim_al():\n",
        "    while True:\n",
        "        try:\n",
        "            secim = int(input(\"SeÃ§iminiz (1-5): \"))\n",
        "            if 1 <= secim <= 5:\n",
        "                return secim\n",
        "            print(\"1-5 arasÄ± seÃ§in.\")\n",
        "        except:\n",
        "            print(\"GeÃ§erli sayÄ± girin.\")\n",
        "\n",
        "def gorevleri_listele(gorevler):\n",
        "    print(\"\\nGÃ–REV LÄ°STESÄ°\")\n",
        "    print(\"-\" * 20)\n",
        "    if not gorevler:\n",
        "        print(\"HenÃ¼z gÃ¶rev yok.\")\n",
        "    else:\n",
        "        for i, gorev in enumerate(gorevler, 1):\n",
        "            print(f\"{i}. {gorev}\")\n",
        "        print(f\"\\nToplam {len(gorevler)} gÃ¶rev\")\n",
        "\n",
        "def gorev_ekle(gorevler):\n",
        "    print(\"\\nYENÄ° GÃ–REV EKLEME\")\n",
        "    while True:\n",
        "        gorev = input(\"GÃ¶rev girin (Ã§Ä±kmak iÃ§in 'q'): \").strip()\n",
        "        if gorev.lower() == 'q':\n",
        "            return gorevler\n",
        "        if gorev:\n",
        "            gorevler.append(gorev)\n",
        "            print(f\"'{gorev}' eklendi.\")\n",
        "            gorevleri_dosyaya_kaydet(gorevler)\n",
        "            return gorevler\n",
        "        print(\"BoÅŸ gÃ¶rev eklenemez.\")\n",
        "\n",
        "def gorev_sil(gorevler):\n",
        "    if not gorevler:\n",
        "        print(\"Silinecek gÃ¶rev yok.\")\n",
        "        return gorevler\n",
        "\n",
        "    print(\"\\nGÃ–REV SÄ°LME\")\n",
        "    gorevleri_listele(gorevler)\n",
        "\n",
        "    while True:\n",
        "        try:\n",
        "            secim = input(f\"Silinecek gÃ¶rev numarasÄ± (1-{len(gorevler)}, Ã§Ä±kmak iÃ§in 'q'): \").strip()\n",
        "            if secim.lower() == 'q':\n",
        "                return gorevler\n",
        "\n",
        "            no = int(secim)\n",
        "            if 1 <= no <= len(gorevler):\n",
        "                silinen = gorevler.pop(no - 1)\n",
        "                print(f\"'{silinen}' silindi.\")\n",
        "                gorevleri_dosyaya_kaydet(gorevler)\n",
        "                return gorevler\n",
        "            print(f\"1-{len(gorevler)} arasÄ± seÃ§in.\")\n",
        "        except:\n",
        "            print(\"GeÃ§erli sayÄ± girin.\")\n",
        "\n",
        "def gorev_duzenle(gorevler):\n",
        "    if not gorevler:\n",
        "        print(\"DÃ¼zenlenecek gÃ¶rev yok.\")\n",
        "        return gorevler\n",
        "\n",
        "    print(\"\\nGÃ–REV DÃœZENLEME\")\n",
        "    gorevleri_listele(gorevler)\n",
        "\n",
        "    while True:\n",
        "        try:\n",
        "            secim = input(f\"DÃ¼zenlenecek gÃ¶rev numarasÄ± (1-{len(gorevler)}, Ã§Ä±kmak iÃ§in 'q'): \").strip()\n",
        "            if secim.lower() == 'q':\n",
        "                return gorevler\n",
        "\n",
        "            no = int(secim)\n",
        "            if 1 <= no <= len(gorevler):\n",
        "                eski = gorevler[no - 1]\n",
        "                print(f\"Mevcut gÃ¶rev: {eski}\")\n",
        "\n",
        "                yeni = input(\"Yeni gÃ¶rev metni (Ã§Ä±kmak iÃ§in 'q'): \").strip()\n",
        "                if yeni.lower() == 'q':\n",
        "                    return gorevler\n",
        "                if yeni:\n",
        "                    gorevler[no - 1] = yeni\n",
        "                    print(f\"GÃ¶rev gÃ¼ncellendi: {yeni}\")\n",
        "                    gorevleri_dosyaya_kaydet(gorevler)\n",
        "                    return gorevler\n",
        "                print(\"BoÅŸ metin girilemez.\")\n",
        "            else:\n",
        "                print(f\"1-{len(gorevler)} arasÄ± seÃ§in.\")\n",
        "        except:\n",
        "            print(\"GeÃ§erli sayÄ± girin.\")\n",
        "\n",
        "def main():\n",
        "    print(\"GÃ¶rev YÃ¶netimi Sistemi BaÅŸlatÄ±lÄ±yor...\")\n",
        "    gorevler = gorevleri_dosyadan_oku()\n",
        "\n",
        "    while True:\n",
        "        ana_menu()\n",
        "        secim = secim_al()\n",
        "\n",
        "        if secim == 1:\n",
        "            gorevleri_listele(gorevler)\n",
        "        elif secim == 2:\n",
        "            gorevler = gorev_ekle(gorevler)\n",
        "        elif secim == 3:\n",
        "            gorevler = gorev_duzenle(gorevler)\n",
        "        elif secim == 4:\n",
        "            gorevler = gorev_sil(gorevler)\n",
        "        elif secim == 5:\n",
        "            print(\"Program sonlandÄ±rÄ±lÄ±yor...\")\n",
        "            break\n",
        "\n",
        "        input(\"Devam etmek iÃ§in Enter tuÅŸuna basÄ±n...\")\n",
        "\n",
        "if __name__ == \"__main__\":\n",
        "    main()"
